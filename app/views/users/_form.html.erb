<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-10 mt-3">
            <% if @user.errors.any? %>
            <%= render 'shared/error', obj: @user %>
            <% end %>
            <%= form_with(model: @user, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
            <div class="form-group row">
                <%= form.label :username, class: "col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                </div>
            </div>
            <div class="form-group row">
                <%= form.label :email, class: "col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
                </div>
            </div>
            <div class="form-group row">
                <%= form.label :password, class: "col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                </div>
            </div>
            <div class="form-group row">
                <%= form.submit(@user.new_record? ? "Sign up" : "Update account" , class: "btn btn-outline-light btn-lg mx-auto") %>
            </div>
            <%end%>
        </div>
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
</div>