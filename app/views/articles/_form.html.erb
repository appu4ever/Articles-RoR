<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-10 mt-3">
            <% if @article.errors.any? %>
            <%= render 'shared/error', obj: @article %>
            <% end %>
            <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
            <div class="form-group row">
                <%= form.label :title, class: "col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= form.text_field :title, class: "form-control shadow rounded" %>
                </div>
            </div>
            <div class="form-group row">
                <%= form.label :decsription, class: "col-sm-2 col-form-label text-light" %>
                <div class="col-sm-10">
                    <%= form.text_area :description, rows: 10, class: "form-control shadow rounded" %>
                </div>
            </div>
            <div class="form-group row">
                <%= form.submit class: "btn btn-outline-light btn-lg mx-auto" %>
            </div>
            <%end%>
        </div>
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
</div>